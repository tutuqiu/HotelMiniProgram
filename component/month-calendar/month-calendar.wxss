.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.date-item {
  width: calc(100% / 7);
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  font-size: 28rpx;
}
/* 空日期占位 */
.date-item.empty {
  height: 80rpx;
}
/* 禁用日期（过去日期） */
.date-item.disabled {
  color: #ccc;
  pointer-events: none;
}
/* 入住日期 */
.date-item.check-in {
  background: #07c160;
  color: #fff;
  border-radius: 50%;
}
/* 离店日期 */
.date-item.check-out {
  background: #07c160;
  color: #fff;
  border-radius: 50%;
}
/* 入住-离店中间日期 */
.date-item.between {
  background: #e8f8ef;
}
.date-num {
  font-size: 28rpx;
}
