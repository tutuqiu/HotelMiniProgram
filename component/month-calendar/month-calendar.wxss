/* 日历面板 */
.calendar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-radius: 16rpx 16rpx 0 0;
  z-index: 1000;
  padding-bottom: 20rpx;
}

