<!--component/month-calendar/month-calendar.wxml-->
<view class="calendar" wx:if="{{isReady}}">
  <text class="title">{{year}}年{{month}}月</text>
  <view class="date-grid">
    <!-- 补全当月第一天前的空白 -->
    <view class="date-item empty" wx:for="{{emptyDays}}" wx:key="index"></view>

    <!-- 日期项 -->
    <view class="date-item {{item.date<today?'disabled':''}} {{item.date==checkInDate?'check-in':''}} {{item.date==checkOutDate?'check-out':''}} {{(checkInDate&&checkOutDate&&(item.date>checkInDate)&&(item.date<checkOutDate))?'between':''}}"
      wx:for="{{days}}"
      wx:key="date"
      bindtap="selectDate"
      data-date="{{item.date}}"
    >
      <view class="date-num">{{item.day}}</view>
    </view>
  </view>
</view>