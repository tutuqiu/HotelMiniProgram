<!-- <text>component/date-selector/date-selector.wxml</text> -->
<view class="modal-mask" bindtap="onHideModal">
  <view class="modal" catchtap="noop">
    <view class="header">
      <text class="title">选择日期</text>
      <image class="close" src="http://cdn.xtuctuy.top/images/close.png" bindtap="onHideModal"></image>
    </view>
    <view class="week-wrap">
      <view class="week-item">日</view>
      <view class="week-item">一</view>
      <view class="week-item">二</view>
      <view class="week-item">三</view>
      <view class="week-item">四</view>
      <view class="week-item">五</view>
      <view class="week-item">六</view>
    </view>

    <scroll-view class="calendar-container" scroll-y>
      <view class="calendar" wx:if="{{isReady}}">
        <month-calendar wx:for="{{calendarList}}" wx:key="id" id="calendar-{{item.id}}" year="{{item.year}}" month="{{item.month}}" defaultCheckInDate="{{checkIn}}" defaultCheckOutDate="{{checkOut}}" needPrice="{{needPrice}}" bind:confirm="confirmDate" bind:update="updateCalendar"></month-calendar>
      </view>
    </scroll-view>
  </view>
</view>