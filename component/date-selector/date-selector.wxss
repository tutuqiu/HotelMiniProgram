/* component/date-selector/date-selector.wxss */
/* 页面 WXSS */
.calendar-container {
  height: 80vh; /* 固定高度（如占屏幕70%），scroll-y必须 */
  width: 100%;
  overflow: hidden; /* 隐藏溢出 */
}
/* 日历容器纵向排列 */
.calendar {
  display: flex;
  flex-direction: column;
  gap: 20rpx; /* 月份之间的间距 */
  padding: 10rpx;
}
month-calendar {
  display: block; /* 关键：默认组件可能是 inline，导致排列异常 */
  width: 100%;
  box-sizing: border-box;
}
.modal-mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
}
.modal{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-radius: 16rpx 16rpx 0 0;
  z-index: 1000;
  padding-bottom: 20rpx;
}
.header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}
.close {
  width: 50rpx;
  height:50rpx;
}
.week-wrap {
  display: flex;
  padding: 15rpx 0;
  background: #f8f8f8;
  margin: 0 20rpx;
  border-radius: 8rpx;
}
.week-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}