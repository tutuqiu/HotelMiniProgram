<!--pages/mine/mine.wxml-->
<view wx:if="{{!isLogin}}" class="root-container unlogin-container">
  <view class="title-container">
    <image class="icon" src="http://cdn.xtuctuy.top/images/icon.png"></image>
    <text class="name">漕盈路</text>
  </view>
  <text class="welcome">欢迎加入漕盈路</text>
  <button class="btn-login" bindtap="onLogin">登录</button>
</view>
<view wx:else class="login-container">
  <view class="userInfo-container" bindtap="goToProfileEdit">
    <image src="{{avatarUrl}}" class="avatar"></image>
    <text class="nickname-text">{{nickName}}</text>
  </view>
  <view class="orders-container">
    <view class="orders-header">
      <text>订单</text>
      <text data-status="ALL" bindtap="goToOrders">全部</text>
    </view>
    <view class="orders-content">
      <view class="pending-payment" data-status="HOLD" bindtap="goToOrders">
        <image src="http://cdn.xtuctuy.top/images/pending-payment.png"></image>
        <text >待支付</text>
      </view>
      <view class="pending-checkin" data-status="CONFIRMED" bindtap="goToOrders">
        <image src="http://cdn.xtuctuy.top/images/pending-checkin.png"></image>
        <text>待入住</text>
      </view>
      <view class="checkedIn" data-status="CHECKED_IN" bindtap="goToOrders">
        <image src="http://cdn.xtuctuy.top/images/checkedIn.png"></image>
        <text>已入住</text>
      </view>
      <view class="pending-review" data-status="ACCOMPLISHED" bindtap="goToOrders">
        <image src="http://cdn.xtuctuy.top/images/ACCOMPLISHED.png"></image>
        <text>已完成</text>
      </view>
    </view>
  </view>
  <view class="collect-container" bindtap="goToCollectedRoom">
    <image src="http://cdn.xtuctuy.top/images/collect-b.png"></image>
    <text>我收藏的</text>
  </view>
  <view class="guestService-container" bindtap="goToGuestServices">
    <image src="http://cdn.xtuctuy.top/images/guestService.png"></image>
    <text>客房服务</text>
  </view>
</view>