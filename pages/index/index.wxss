.zy-slider {
  margin: 60rpx;
}
.headCount-btns{
  display:flex;
  direction: row;
}
.checkInDateFilter{
  display:flex;
  direction: row;
}
.checkOutDateFilter{
  display:flex;
  direction: row;
}
/* 选中状态：绿色背景+白色文字 */
.room-btn.selected {
  background-color: #07c160;
  color: #fff;
  border: 1px solid #07c160;
}

/* 未选中状态：灰色边框+灰色文字 */
.room-btn.unselected {
  background-color: #fff;
  color: #999;
  border: 1px solid #eee;
}
