/* pages/index/index.wxss */
.zy-slider {
  margin: 60rpx;
}
.headCount-btns{
  display:flex;
  direction: row;
}
.checkInDateFilter{
  display:flex;
  direction: row;
}
.checkOutDateFilter{
  display:flex;
  direction: row;
}
/* 选中状态：绿色背景+白色文字 */
.room-btn.selected {
  background-color: #07c160;
  color: #fff;
  border: 1px solid #07c160;
}

/* 未选中状态：灰色边框+灰色文字 */
.room-btn.unselected {
  background-color: #fff;
  color: #999;
  border: 1px solid #eee;
}
.roomTypeFilter-container{
  padding: 30rpx;
  background: #fff;
  border-radius: 8rpx;
  margin: 20rpx;
}
/* 按钮组：flex布局+换行，关键是设置宽度100% */
.room-btn-group {
  display: flex;
  flex-wrap: wrap; /* 允许换行 */
  justify-content: space-between; /* 每行两端对齐，间距均匀 */
  gap: 20rpx 0; /* 行间距20rpx，列间距0（靠宽度控制） */
  padding: 10rpx 0;
}
/* 房型按钮：每行2个，宽度45%（留间距） */
.room-btn {
  width: 45%; /* 关键：2个按钮占90%，剩余10%作为间距 */
  padding: 25rpx 0; /* 垂直内边距，保证按钮高度一致 */
  border-radius: 8rpx;
  font-size: 30rpx;
  text-align: center;
  touch-action: manipulation;
  transition: all 0.2s ease;
}