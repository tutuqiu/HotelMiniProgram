.chatRoomList-container{
  padding: 0 24rpx;
}
chat-card{
  display: block;
  width: 100%;
}

/* 未登录容器 - 全屏居中 */
.unlogin-container {
  /* 全屏占满 */
  width: 100vw;
  height: 100vh;
  /* 弹性布局实现水平+垂直居中 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* 背景色和主容器保持一致 */
  background-color: #f5f5f5;
  /* 可选：增加内边距，避免内容贴边 */
  padding: 20rpx;
  box-sizing: border-box;
}

/* 欢迎文字样式 */
.welcome {
  font-size: 32rpx;
  color: #666;
  /* 文字和按钮之间的间距 */
  margin-bottom: 40rpx;
  /* 可选：文字居中（兜底） */
  text-align: center;
}

/* 登录按钮样式 */
.btn-login {
  width: 280rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  background-color: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  /* 去掉按钮默认边框 */
  border: none;
}