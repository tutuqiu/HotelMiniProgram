/* 让 page 充满屏幕 */
page {
  height: 100%;
}

/* ================= 已登录整体容器（上下两块） ================= */
.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

/* 上半部分：聊天房间列表 */
.chatRoomList-container {
  flex: 1;                     /* 占满剩余空间 */
  padding: 24rpx;
  box-sizing: border-box;
}

/* chat-card 自定义组件占满一行 */
chat-card {
  display: block;
  width: 100%;
  margin-bottom: 16rpx;
}

/* ================= 下半部分：固定服务入口条 ================= */
.fixedService-container {
  padding: 16rpx 24rpx 28rpx;
  box-sizing: border-box;

  background-color: #ffffff;
  border-top: 1px solid #eeeeee;

  /* 做成一个白色圆角条，视觉上“悬浮”在底部 */
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  box-shadow: 0 -6rpx 20rpx rgba(0, 0, 0, 0.08);

  display: flex;
  justify-content: space-between;
  column-gap: 24rpx;
}

/* 四个服务入口的公共样式（delivery / extend_stay / cleaning / laundry） */
.fixedService-container > view {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 图标占位大小（后续你换真实图片） */
.fixedService-container image {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background-color: #f3f3f3;   /* 没有图片时先用灰底占位 */
  margin-bottom: 12rpx;
}

/* 文案样式 */
.fixedService-container text {
  font-size: 26rpx;
  color: #333333;
}

/* ================= 未登录 & 未连接：整页居中 ================= */
.unlogin-container,
.unconnect-container {
  width: 100vw;
  height: 100vh;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  background-color: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 未登录提示文字 */
.welcome {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
}

/* 登录按钮 */
.btn-login {
  width: 280rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;

  background-color: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
}

/* 未连接提示图片 */
.disconnected-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
}
