/* pages/service/service.wxss */
.page-container {
  padding: 20rpx;
  box-sizing: border-box;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: #f5f5f5;
}

/* 消息列表 */
.msg-list {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
  font-size: 28rpx;
}

.msg-item {
  margin: 20rpx 10rpx;
}

/* 消息整体容器 */
.msg-wrap {
  display: flex;
  align-items: flex-start;
  gap: 15rpx;
}

/* 对方消息：头像在左，内容在右 */
.other-msg-wrap {
  justify-content: flex-start;
}

/* 自己消息：头像在右，内容在左 */
.self-msg-wrap {
  justify-content: flex-end;
}

/* 头像样式 */
.msg-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 1px solid #eee;
}

/* 消息内容容器 */
.msg-content-wrap {
  display: flex;
  flex-direction: column;
  max-width: 70%;
}

.msg-time {
  font-size: 22rpx;
  color: #999;
  margin: 5rpx 0;
  text-align: center;
}

.msg-content {
  padding: 15rpx 20rpx;
  border-radius: 10rpx;
  word-wrap: break-word;
  font-size: 28rpx;
}

.other-msg-wrap .msg-content {
  background-color: #eee;
  color: #333;
  border-top-left-radius: 0;
}

.self-msg-wrap .msg-content {
  background-color: #07c160;
  color: #fff;
  border-top-right-radius: 0;
}

/* 输入区域 */
.input-area {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.msg-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1px solid #eee;
  border-radius: 40rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.send-btn {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
  background-color: #07c160;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.send-btn[disabled] {
  background-color: #ccc;
  color: #999;
}

.reconnect-btn {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
  background-color: #1677ff;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 未登录容器 - 全屏居中 */
.unlogin-container {
  /* 全屏占满 */
  width: 100vw;
  height: 100vh;
  /* 弹性布局实现水平+垂直居中 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* 背景色和主容器保持一致 */
  background-color: #f5f5f5;
  /* 可选：增加内边距，避免内容贴边 */
  padding: 20rpx;
  box-sizing: border-box;
}

/* 欢迎文字样式 */
.welcome {
  font-size: 32rpx;
  color: #666;
  /* 文字和按钮之间的间距 */
  margin-bottom: 40rpx;
  /* 可选：文字居中（兜底） */
  text-align: center;
}

/* 登录按钮样式 */
.btn-login {
  width: 280rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  background-color: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  /* 去掉按钮默认边框 */
  border: none;
}