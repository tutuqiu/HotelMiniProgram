/* ================= 基础：整页高度 ================= */
page{
  height: 100%;
  background: #f5f5f5;
}

.login-container{
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

/* ================= 聊天列表区：可滚动 + 给底部留空间 ================= */
/* 你当前 chatRoomList-container 不是 scroll-view，这里用页面 flex 让它占满并滚动 */
.chatRoomList-container{
  flex: 1;
  padding: 24rpx;
  box-sizing: border-box;

  /* 关键：列表多时滚动 */
  overflow: auto;
  -webkit-overflow-scrolling: touch;

  /* 给底部服务条留出高度，避免被挡 */
  padding-bottom: 140rpx;
}

/* chat-card 占满一行 */
chat-card{
  display: block;
  width: 100%;
  margin-bottom: 16rpx;
}

/* ================= 底部固定服务条 ================= */
.fixedService-container{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 50;

  padding: 16rpx 24rpx calc(28rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;

  background: #ffffff;
  border-top: 1px solid #eeeeee;

  /* 视觉上悬浮 */
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  box-shadow: 0 -6rpx 20rpx rgba(0, 0, 0, 0.08);

  display: flex;
  justify-content: space-between;
  gap: 24rpx;
}

/* 每个服务入口 */
.fixedService-item{
  flex: 1;
  min-width: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.fixedService-icon{
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #f3f3f3;
  margin-bottom: 10rpx;
}

.fixedService-text{
  font-size: 26rpx;
  color: #333;
  text-align: center;
  line-height: 1.2;
}

/* ================= 未登录 / 未连接：全屏居中 ================= */
.unlogin-container,
.unconnect-container{
  width: 100vw;
  height: 100vh;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  background: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

.welcome{
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
}

.btn-login{
  width: 280rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;

  background: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
}

.disconnected-img{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
}

/* ================= 服务弹窗：遮罩 + 居中卡片 ================= */
.serviceModalMask{
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;

  z-index: 999;
  background: rgba(0, 0, 0, 0.35);

  display: flex;
  align-items: center;
  justify-content: center;

  padding: 24rpx;
  box-sizing: border-box;
}

.serviceModal{
  width: 100%;
  max-width: 680rpx;

  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx 26rpx;
  box-sizing: border-box;

  box-shadow: 0 12rpx 34rpx rgba(0,0,0,0.18);

  max-height: 80vh;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

/* 标题（serviceName） */
.serviceModal > text:first-child{
  display: block;
  font-size: 34rpx;
  font-weight: 700;
  color: #222;
  margin-bottom: 22rpx;
}

/* 标签（内容/备注） */
.serviceModal > text{
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-top: 18rpx;
  margin-bottom: 12rpx;
}

/* 输入框 */
.content-input,
.note-input{
  width: 100%;
  height: 88rpx;
  padding: 0 22rpx;
  box-sizing: border-box;

  background: #f6f7f9;
  border: 1rpx solid #e9e9e9;
  border-radius: 16rpx;

  font-size: 28rpx;
  color: #222;
}

/* 备注略高一点 */
.note-input{
  height: 96rpx;
}

/* 提交按钮：居中 + 与 index 风格一致 */
.serviceModal button{
  width: 100%;
  height: 88rpx;
  margin-top: 26rpx;

  border-radius: 44rpx;
  background: #07c160;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  border: none;

  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.serviceModal button:active{
  opacity: 0.9;
}

/* 整块：标题 + 步进器 */
.extendDay-container{
  margin-top: 12rpx;
  margin-bottom: 18rpx;
}

/* “续住天数” */
.extend-label{
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

/* 一行：- 输入 + */
.extend-stepper{
  display: flex;
  align-items: center;        /* 垂直居中 */
  justify-content: center;
  column-gap: 20rpx;          /* 控件之间的间距 */
}

/* 统一高度基准 */
.extend-stepper .extend-btn,
.extend-stepper .extendDay-input{
  height: 64rpx;
  box-sizing: border-box;
}

/* 中间输入框：更宽一点的胶囊形 */
.extendDay-input{
  width: 180rpx;              /* 比之前更宽 */
  padding: 0 16rpx;

  text-align: center;
  font-size: 28rpx;
  color: #222;

  background: #f6f7f9;
  border: 1rpx solid #e9e9e9;
  border-radius: 32rpx;        /* 胶囊形 */
}

/* 两侧按钮：正圆形 */
.extend-btn{
  width: 64rpx;
  height:64rpx;
  min-width: 64rpx;        /* 关键：覆盖 button 默认 min-width */
  padding: 0;

  border-radius: 50%;      /* 正圆 */
  border: 1px solid #e5e5e5;
  background-color: #f8f8f8;

  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  line-height: 1;
}

/* 禁用态（比如 “-” 到 1 时） */
.extend-btn[disabled]{
  color: #ccc;
  border-color: #eee;
  background-color: #fafafa;
}
