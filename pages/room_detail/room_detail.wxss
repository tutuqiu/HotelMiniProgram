/* pages/room_detail/room_detail.wxss */
.detail-container {
  width: 100%;
  background: #fff;
  font-size: 28rpx;
}

/* 多图滑动区域样式 */
.swiper-wrap {
  position: relative;
  width: 100%;
}
.room-swiper {
  width: 100%;
  height: 400rpx; /* 滑动区域高度 */
}
.swiper-img {
  width: 100%;
  height: 100%;
}

/* 收藏按钮（悬浮在swiper上，位置不变） */
.collect-btn {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 99;
}
.collect-btn image {
  width: 30rpx;
  height: 30rpx;
}

/* 图片分类标签（位置不变） */
.img-tab-wrap {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  display: flex;
  gap: 12rpx;
  z-index: 99;
}
.img-tab {
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  font-size: 24rpx;
}
.img-tab.active {
  background: #fff;
  font-weight: bold;
}

/* 标题+标签区域（不变） */

.title-wrap, 
.description-container {
  padding: 20rpx;
}
.score-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: #f0f9eb;
  color: #52c41a;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}
.room-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}
.tags-wrap {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}
.tag-item {
  padding: 6rpx 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 24rpx;
}

/* 地址区域（不变，新增address字段后样式无需调整） */
.address-wrap {
  padding: 0 20rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 12rpx;
  border-bottom: 1px solid #f5f5f5;
}
.address-text {
  width: 100%;
  font-size: 28rpx;
}
.map-btn {
  margin-left: auto;
  padding: 8rpx 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 24rpx;
}

/* 联系客服（底部左侧） */
.contact-container{
  width: 120rpx;                 /* 固定宽度，避免挤压右侧按钮 */
  display: flex;
  flex-direction: column;        /* 图标在上，文字在下 */
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  padding: 8rpx 0;
}

.contact-container image{
  width: 45rpx;
  height: 45rpx;
}

.contact-container text{
  font-size: 22rpx;
  color: #666;
  line-height: 1;
}

/* 日期区域（不变） */
.date-wrap {
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  border-bottom: 1px solid #f5f5f5;
}
.stay-night {
  padding: 2rpx 12rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  font-size: 24rpx;
}
.low-price {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-left: 8rpx;
}
.calendar-btn {
  margin-left: auto;
  background: transparent;
  font-size: 28rpx;
  color: #1890ff;
}

.description-container text{
  display: block;
}

/* 房型信息区域（不变） */
.room-type-wrap {
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  border-bottom: 1px solid #f5f5f5;
}
.type-img {
  width: 160rpx;
  height: 120rpx;
  border-radius: 8rpx;
}
.type-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.type-title {
  font-weight: bold;
  font-size: 28rpx;
}
.type-desc {
  font-size: 24rpx;
  color: #666;
}
.cancel-tip {
  font-size: 22rpx;
  color: #999;
}
.price-wrap {
  text-align: right;
}
.price-desc {
  font-size: 24rpx;
  color: #999;
}
.price-night {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}
.discount-tip {
  font-size: 22rpx;
  color: #ff4d4f;
}
.book-btn {
  width: 60rpx;
  height: 60rpx;
  background: #ff7a45;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 底部预订栏（不变） */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 16rpx 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
}
.stay-date {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #666;
}
.book-btn-large {
  flex: 1;
  height: 80rpx;
  background: #ff7a45;
  color: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.total-price {
  font-size: 24rpx;
  font-weight: normal;
  margin-left: 8rpx;
}