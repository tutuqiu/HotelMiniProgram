/* ===== 其他筛选入口（像 index 的卡片/按钮风格） ===== */
.otherFilter{
  display: flex;
  align-items: center;
  justify-content: center;

  height: 72rpx;
  padding: 0 22rpx;
  border-radius: 16rpx;

  background-color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  border: 1px solid #eee;

  box-sizing: border-box;
}

.otherFilter text{
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

/* ===== mask（遮罩层） ===== */
.otherFilterModalMask{
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;

  z-index: 999;
  background: rgba(0,0,0,0.28);
}

/* ===== 面板（下拉弹层主体） ===== */
.otherFilterModal{
  position: absolute;
  left: 24rpx;
  right: 24rpx;

  /* 从 header 下面开始：按你 header 实际高度调整 */
  top: 200rpx;

  background-color: #f5f5f5; /* 和 index 的滚动区域一致 */
  border-radius: 16rpx;
  padding: 24rpx;
  box-sizing: border-box;

  /* 阴影更接近“浮层” */
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.12);

  /* 内容多时可滚动 */
  max-height: calc(100vh - 260rpx);
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

/* ===== 面板内部每一行：复用 index 的卡片风格 ===== */
.otherFilterModal .headCountFilter-container,
.otherFilterModal .bedCountFilter-container,
.otherFilterModal .bedroomCountFilter-container{
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);

  display: flex;
  align-items: center;
  justify-content: space-between;
}

.otherFilterModal .bedroomCountFilter-container{
  margin-bottom: 0;
}

/* 左侧标题 */
.otherFilterModal .headCountFilter-container > text,
.otherFilterModal .bedCountFilter-container > text,
.otherFilterModal .bedroomCountFilter-container > text{
  font-size: 28rpx;
  color: #333;
}

/* ===== 右侧步进器：三行统一一个风格（和 index 一致） ===== */
.otherFilterModal .headCount-btns,
.otherFilterModal .bedCount-btns,
.otherFilterModal .bedroomCount-btns{
  display: flex;
  flex-direction: row;
  align-items: center;
  column-gap: 16rpx;
}

/* 按钮样式：沿用 index 的圆角灰底按钮 */
.otherFilterModal .btn-minus,
.otherFilterModal .btn-add{
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0;

  text-align: center;
  font-size: 32rpx;

  border-radius: 30rpx;
  border: 1px solid #e5e5e5;
  background-color: #f8f8f8;

  color: #333;
}

/* 数字 */
.otherFilterModal .headCount-btns text,
.otherFilterModal .bedCount-btns text,
.otherFilterModal .bedroomCount-btns text{
  min-width: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

/* 禁用态 */
.otherFilterModal .btn-minus[disabled]{
  color: #ccc;
  border-color: #eee;
  background-color: #fafafa;
}

.btn-confirm{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  margin-top: 24rpx;
  padding: 0;

  background-color: #07c160;
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;

  border-radius: 44rpx;
  border: none;
}

.page{
  position: relative;
  height: 100vh;
  background: #f5f5f5;
}
.header{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 99;

  /* display: flex; */

  padding: 18rpx 20rpx 14rpx;
  background: #ffffff;
}
/* 通用卡片容器 */
.dateFilter-container,
.headCountFilter-container,
.priceFilter-container {
  background-color: #eee;
  /* border-radius: 16rpx; */
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

/* ====== 日期筛选 ====== */
.dateFilter-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 左右的“入住/离店”块 */
.checkInDateFilter,
.checkOutDateFilter {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  color: #333;
}

/* “入住:”“离店:”标签与日期之间留点间距 */
.checkInDateFilter text:first-child,
.checkOutDateFilter text:first-child {
  color: #888;
  margin-right: 8rpx;
}

/* 中间“共X晚” */
.dateFilter-container > text {
  font-size: 24rpx;
  color: #07c160;
  margin: 0 16rpx;
  white-space: nowrap;
}

/* 列表滚动区：必须给顶部留出 header 的高度 */
.list-scroll{
  height: 100vh;
  box-sizing: border-box;
  padding-top: 200rpx;  /* 关键：按你实际 header 高度微调 */
}

/* 原来的列表容器 */
.roomResult-container{
  padding: 0 20rpx 24rpx;
  box-sizing: border-box;
}

