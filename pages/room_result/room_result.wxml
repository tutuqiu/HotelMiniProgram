<!-- room-result页面：房间列表 -->
<view class="hotel-result-page">
  <!-- 循环渲染每个房间卡片 -->
  <room-card 
    wx:for="{{roomList}}" 
    wx:key="id" 
    id="roomCard-{{item.id}}"
    roomData="{{item}}"
    imgPrefix="{{imgPrefix}}"
    collectedList="{{collectedList}}"
    checkInDate="{{checkInDate}}"
    checkOutDate="{{checkOutDate}}"
    bind:collect="onRoomCollect"
    bind:cardTap="onCardTap"
    ></room-card>
</view>