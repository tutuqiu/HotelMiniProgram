/* pages/reservation/reservation.wxss */
page {
  background: #f4f6f8;
}

.page {
  min-height: 100vh;
}

/* 顶部导航 */
.nav {
  height: 96rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(180deg, #dff7e8 0%, #f4f6f8 100%);
}

.nav-left,
.nav-right {
  width: 160rpx;
  display: flex;
  align-items: center;
}

.nav-left {
  justify-content: flex-start;
}

.nav-right {
  justify-content: flex-end;
  gap: 12rpx;
}

.nav-icon {
  font-size: 48rpx;
  color: #111827;
  line-height: 1;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
  padding: 0 16rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.nav-pill {
  font-size: 24rpx;
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.75);
  color: #111827;
  border: 1rpx solid rgba(0, 0, 0, 0.06);
}

/* 内容区 */
.content {
  padding: 16rpx 24rpx 0;
}

/* 卡片通用 */
.card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx 24rpx;
  margin-bottom: 18rpx;
  box-shadow: 0 6rpx 18rpx rgba(17, 24, 39, 0.06);
}

.row {
  display: flex;
  align-items: center;
}

.row-top {
  justify-content: space-between;
}

.row-between {
  justify-content: space-between;
}

.row-inline {
  gap: 12rpx;
}

.col {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.divider {
  height: 1rpx;
  background: #eef2f7;
  margin: 16rpx 0;
}

/* ====== 标题/文字（基础） ====== */
.section-title {
  font-size: 34rpx;            /* 入住信息标题更大 */
  font-weight: 800;
  color: #111827;
}

.strong {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
}

.label {
  font-size: 30rpx;            /* 入住信息 label 更大 */
  color: #111827;
  font-weight: 700;
}

.value {
  font-size: 30rpx;            /* input 内容字号更大 */
  font-weight: 600;
  color: #111827;
}

.value-phone {
  margin-left: 16rpx;
}

.muted {
  font-size: 24rpx;
  color: #6b7280;
}

.link {
  font-size: 26rpx;
  color: #16a34a;
  font-weight: 600;
}

.ok-text {
  font-size: 24rpx;
  color: #16a34a;
  font-weight: 600;
}

.tag-ok {
  width: 32rpx;
  height: 32rpx;
  border-radius: 8rpx;
  background: #e7f7ee;
  color: #16a34a;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: 800;
}

.tag-ok--circle {
  border-radius: 999rpx;
  width: 34rpx;
  height: 34rpx;
}

.hint {
  width: 30rpx;
  height: 30rpx;
  border-radius: 999rpx;
  border: 1rpx solid #d1d5db;
  color: #6b7280;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow {
  font-size: 34rpx;
  color: #9ca3af;
  margin-left: 10rpx;
}

.orange {
  color: #f97316;
  font-weight: 700;
}

.badge {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background: #fff7ed;
  color: #f97316;
  border: 1rpx solid rgba(249, 115, 22, 0.25);
}

/* ====== 关键修改：第一个卡片更“松、更大” ====== */
.content .card:first-of-type {
  padding: 28rpx 26rpx;
}

.content .card:first-of-type .row {
  padding: 10rpx 0;
  align-items: flex-start;
}

.content .card:first-of-type .strong {
  font-size: 32rpx;
  line-height: 1.7;
  font-weight: 700;
}

.content .card:first-of-type .ok-text {
  font-size: 26rpx;
  line-height: 1.7;
  font-weight: 600;
}

.content .card:first-of-type .row-inline {
  gap: 14rpx;
}

/* ====== 入住信息：把 label + input 改成左右结构（兼容你当前 WXML） ====== */
/* 入住人那行：row-between 内部的 col 由纵向改横向，并让 input 吃满 */
.card .row-between .col {
  flex: 1;
  display: flex;
  flex-direction: row;        /* 从 column 改为 row */
  align-items: center;
  gap: 16rpx;
}

/* label 固定宽度，避免挤压 */
.card .row-between .col .label {
  width: 140rpx;
  flex: 0 0 140rpx;
}

/* 入住人 input（你给它 class="value"）做成输入框样式并占满 */
.card .row-between .col input.value {
  flex: 1;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 16rpx;
  border-radius: 14rpx;
  background: #f3f4f6;
  box-sizing: border-box;
}

/* 电话那行：原本 input 在 row-inline 里，继续让它横向并占满 */
.card .row-between .col .row-inline {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

/* 电话 input 没有 class="value"，这里直接命中 */
.card .row-between .col .row-inline input {
  flex: 1;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 16rpx;
  border-radius: 14rpx;
  background: #f3f4f6;
  box-sizing: border-box;
}

/* stepper */
.stepper {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.step-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 999rpx;
  background: #eafff1;
  color: #16a34a;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: 800;
}

.step-btn--disabled {
  background: #f3f4f6;
  color: #9ca3af;
}

.step-num {
  font-size: 26rpx;
  color: #111827;
  font-weight: 600;
}

/* 小图标占位 */
.mini-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 14rpx;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  flex: 0 0 56rpx;
  margin-left: 12rpx;
}

/* coupon */
.coupon {
  margin-top: 16rpx;
  padding: 18rpx;
  border-radius: 18rpx;
  background: #f7fbff;
  border: 1rpx solid #e5eefc;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.coupon-sub {
  font-size: 22rpx;
  color: #f97316;
  margin-top: 6rpx;
}

.coupon-right {
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.coupon-price {
  font-size: 34rpx;
  font-weight: 800;
  color: #16a34a;
}

.radio {
  width: 34rpx;
  height: 34rpx;
  border-radius: 999rpx;
  border: 2rpx solid #16a34a;
  background: #ffffff;
}

/* 底部支付栏 */
.paybar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 18rpx 24rpx calc(18rpx + env(safe-area-inset-bottom));
  background: #ffffff;
  border-top: 1rpx solid #eef2f7;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.pay-left {
  flex: 2;                    /* 左侧更大空间 */
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.pay-price {
  font-size: 40rpx;
  font-weight: 900;
  color: #f97316;
}

.pay-mid {
  width: 90rpx;               /* 明细更窄 */
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.up {
  transform: translateY(-2rpx);
}

.pay-btn {
  width: 190rpx;              /* 按钮更小 */
  height: 72rpx;
  border-radius: 999rpx;
  background: #16a34a;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 800;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.bottom-spacer {
  height: 140rpx;
}
