.modal-mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5); 
  z-index: 998; 
}
.modal-container{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 85%; 
  max-width: 600rpx; 
  background-color: #fff;
  border-radius: 16rpx; 
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15); 
  z-index: 999;
  overflow: hidden;
}
.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0; 
}
.close-icon {
  width: 32rpx;
  height: 32rpx;
}
.phoneNumber-container{
  display:flex;
  padding: 10rpx 20rpx; 
  gap: 10rpx; 
  border-bottom: 1px solid #f0f0f0;
}
.sms-container{
  display:flex;
  padding: 10rpx 20rpx; 
  gap: 10rpx; 
  border-bottom: 1px solid #f0f0f0;
}

.btn-phoneChange{
  font-size: 28rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.choose-avatar {
  /* 关键：清除按钮默认样式 */
  padding: 0;        /* 去掉默认内边距 */
  border: none;      /* 去掉默认边框 */
  background: none;  /* 去掉默认背景 */
  /* 适配图片尺寸：宽高和图片一致 */
  width: 300rpx;     
  height: 300rpx;
  /* 关键：让按钮块级显示，避免行内元素的尺寸限制 */
  display: block;    
  /* 可选：居中显示（根据需求调整） */
  margin: 0 auto;    
  /* 可选：防止图片溢出（如果需要） */
  overflow: visible; 
  /* 去掉按钮点击的默认背景高亮（可选） */
  -webkit-tap-highlight-color: transparent;
}

/* 头像图片样式（保留你的原有样式，补充优化） */
.img-avatar {
  width: 300rpx;
  height: 300rpx;
  /* 可选：保持图片比例，防止拉伸变形 */
  object-fit: cover; 
  /* 可选：去掉image默认的行内空白（底部缝隙） */
  display: block;    
}
